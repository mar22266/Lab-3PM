<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#979090"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selecciona una festividad:"
        android:textSize="32sp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        android:shadowColor="#CCCCCC"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/birthdayButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cumpleaños"
        android:backgroundTint="#FF4081"
        android:textColor="#FFF"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/fatherDayButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Día del Padre"
        android:backgroundTint="#3F51B5"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/birthdayButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/motherDayButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Día de la Madre"
        android:backgroundTint="#FFC107"
        android:textColor="#333"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fatherDayButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/weddingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Boda"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/motherDayButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/valentineButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="San Valentín"
        android:backgroundTint="#E91E63"
        android:textColor="#FFF"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/weddingButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/valentineButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
